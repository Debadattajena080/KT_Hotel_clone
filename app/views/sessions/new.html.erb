<div class="container d-flex justify-content-center mt-4">

<%# <%= render 'shared/error_messages' %> 
<div class="col-md-5 col-md-offset-3 border">
<h1 class="d-flex justify-content-center mt-4">Sign In</h1>
  <%= form_with url: sign_in_path do |f| %>
  
    <p>
    <%= f.label 'email:'%><br>
    <%= f.text_field :email, id: 'email', class:'form-control' %>
    </p>
    <p>
    <%= f.label 'password:'%><br>
    <%= f.password_field :password, id: 'password' , class:'form-control'%>
   
    </p>
    <div class="mb-3">
    <%= f.submit 'Log In', class: "btn btn-primary" %>
    </div>
  <% end %>
   
</div>
</div>
<%= render "shared/errors", obj: @room %>
<div class="container border mt-4">
<%= form_with model: [ @hotel, @room ] do |form|%>

  <div class="mt-3">
    <%= form.label :Room_type %><br>
    <%= form.text_field :room_type , class: 'form-control'%>
  </div>

  <div class="mt-2">
    <%= form.label :Price %><br>
    <%= form.text_field :price , class: 'form-control'%>
  </div>

  
  <div class="form-group mt-2">
  <% if @room.image.attached? %>
    <%= image_tag @room.image, style: "width: 200px; display: block" %>
  <% end %>
  <%= form.label :image %><br>
  <%= form.file_field :image, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.submit %>
  </div>

<% end %>
</div>